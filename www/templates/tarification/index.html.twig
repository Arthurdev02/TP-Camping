{% extends 'base.html.twig' %}

{% block title %}Tarification index{% endblock %}

{% block body %}
    <h1>Tarification index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tarif</th>
                <th>Date_debut</th>
                <th>Date_fin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tarification in tarifications %}
            <tr>
                <td>{{ tarification.id }}</td>
                <td>{{ tarification.Tarif }}</td>
                <td>{{ tarification.dateDebut ? tarification.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ tarification.dateFin ? tarification.dateFin|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_tarification_show', {'id': tarification.id}) }}">show</a>
                    <a href="{{ path('app_tarification_edit', {'id': tarification.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_tarification_new') }}">Create new</a>
{% endblock %}
