{% extends 'base.html.twig' %}

{% block title %}Accomodation{% endblock %}

{% block body %}
    <h1>Accomodation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ accomodation.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ accomodation.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ accomodation.description }}</td>
            </tr>
            <tr>
                <th>NbreBedrooms</th>
                <td>{{ accomodation.nbreBedrooms }}</td>
            </tr>
            <tr>
                <th>IsAvaliable</th>
                <td>{{ accomodation.isAvaliable ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>ImagePath</th>
                <td>{{ accomodation.imagePath }}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ accomodation.Size }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_accomodation_index') }}">back to list</a>
{% if is_granted('ROLE_ADMIN') %}



<a href="{{ path('app_accomodation_edit', {'id': accomodation.id}) }}">edit</a>

{{ include('accomodation/_delete_form.html.twig') }}

{% endif %}

{% endblock %}
