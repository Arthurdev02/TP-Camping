{% extends 'base.html.twig' %}

{% block title %}Liste des Utilisateurs
{% endblock %}


{% block body %}
<div class="container">
<h1>📋 Liste des Utilisateurs</h1>


<table class="table-users">
	<thead></thead>

            <tr>
<th>🆔 ID</th>
<th>📧 Email</th>
<th>🔑 Rôles</th>
<th>🔒 Mot de passe</th>

<th>⚙️ Actions</th>

            </tr>
        </thead>
        <tbody>
{% for user in users %}
		<td>{{ user.id }}</td>
		<td>{{ user.email }}</td>
<td>{{ user.roles ? user.roles|json_encode : 'Aucun' }}</td>
<td>••••••••</td>

<td>
	<a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-modifier">✏️ Modifier</a>
</td></tr>{% else %}<tr>
<td colspan="5" class="text-center text-muted">🚀 Aucun utilisateur trouvé.</td></tr>{% endfor %}

        </tbody>
    </table>
</div>

{% endblock %}
