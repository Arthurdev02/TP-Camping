{% extends 'base.html.twig' %}

{% block title %}Reservations
{% endblock %}

{% block body %}
	<h1>Reservations</h1>

	<table>
		<thead>
			<tr>
				<th>User Name</th>
				<th>Reservation Date</th>
				<th>Details</th>
			</tr>
		</thead>
		<tbody>
			{% for reservation in reservations %}
				<tr>
					<td>{{ reservation.user.name }}</td>
					<td>{{ reservation.date|date('Y-m-d H:i') }}</td>
					<td>{{ reservation.details }}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}

